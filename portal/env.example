# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/cadgroup?retryWrites=true&w=majority

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Storage Configuration - Choose either Supabase (recommended) or S3
STORAGE_DRIVER=supabase                # 'supabase' or 's3'

# Supabase Storage Configuration (Recommended)
SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
SUPABASE_SERVICE_ROLE=your-service-role-key
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_BUCKET=cadgroup-uploads

# AWS S3 Configuration (Legacy - only if STORAGE_DRIVER=s3)
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-aws-access-key-id
S3_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-s3-bucket-name
S3_ENDPOINT=                           # Only for S3-compatible services (leave empty for AWS)
S3_PUBLIC_READ=false                   # Set to 'true' if you want public-read ACL

# Email Configuration (Optional)
EMAIL_FROM=noreply@cadgrouptools.com
EMAIL_SERVER_HOST=smtp.sendgrid.net
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=apikey
EMAIL_SERVER_PASSWORD=your-sendgrid-api-key

# Other Configuration
NODE_ENV=development
